{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@reactive/adapter-sequelize": [
        "packages/reactive-adapter-sequelize/src/index.ts"
      ],
      "@reactive/client": ["packages/client/src/index.ts"],
      "@reactive/commons": ["packages/commons/src/index.ts"],
      "@reactive/icons": ["packages/icons/src/index.ts"],
      "@reactive/plugin-data-explorer": [
        "packages/plugins/@reactive/plugin-data-explorer/src/index.ts"
      ],
      "@reactive/plugin-auth": [
        "packages/plugins/@reactive/plugin-auth/src/index.ts"
      ],
      "@reactive/plugin-media-adapter-local": [
        "packages/plugins/@reactive/plugin-media-adapter-local/src/index.ts"
      ],
      "@reactive/plugin-data-types": [
        "packages/reactive-backend/plugins/@reactive/plugin-data-types/src/index.ts"
      ],
      "@reactive/server": ["packages/server/src/index.ts"],
      "@reactive/server-cli": ["packages/cli/src/index.ts"],
      "@reactive/server-dashboard": [
        "packages/plugins/@reactive/server-dashboard/src/index.ts"
      ],
      "@reactive/server-helpers": ["packages/server-helpers/src/index.ts"],
      "@reactive/ui": ["packages/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
