{
  "name": "reactive-adapter-typeorm",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/reactive-adapter-typeorm/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/reactive-adapter-typeorm",
        "main": "packages/reactive-adapter-typeorm/src/index.ts",
        "tsConfig": "packages/reactive-adapter-typeorm/tsconfig.lib.json",
        "assets": ["packages/reactive-adapter-typeorm/*.md"]
      },
      "configurations": {
        "watch":{
          "watch": true
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs reactive-adapter-typeorm {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/reactive-adapter-typeorm/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/reactive-adapter-typeorm/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
